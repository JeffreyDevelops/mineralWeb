    <div class="table-data table-responsive">
      <% 
      const playersPerPage = 10;
      const currentPage = parameter.parameterSites ? parseInt(parameter.parameterSites, 10) : 1;
      const totalPages = Math.ceil(paginationLeaderboardsData.players.length / playersPerPage);
    
      // Get the correct players for the current page
      const startIndex = (currentPage - 1) * playersPerPage;
      const endIndex = startIndex + playersPerPage;
      const paginatedPlayers = paginationLeaderboardsData.players.slice(startIndex, endIndex);
    %>
    
    <table class="flex-container table table-dark table-striped" style="margin-top: 4rem; width: 85%; margin-left: auto; margin-right: auto;">
        <tr>
            <th class="rank" scope="col">Rank</th>
            <th class="player" scope="col">Player</th>
            <th class="elo" scope="col">Elo</th>
        </tr>
        
        <% paginatedPlayers.forEach(function(leaderboardsPlayers, index) { %>   
            <tr>
                <th style="font-size: 1.4rem;" scope="row"><%= startIndex + index + 1 %>#</th>
                <td style="font-size: 1.4rem;">
                    <img class="rounded" src="https://visage.surgeplay.com/face/24/<%= leaderboardsPlayers.playerUUID %>" alt="">
                    <a href="/player/<%= leaderboardsPlayers.playerName %>"><%= leaderboardsPlayers.playerName %></a>
                </td>
                <td style="font-size: 1.4rem;"><%= leaderboardsPlayers.elo %></td>
            </tr>
        <% }) %> 
    </table>
    
    <div class="pagination">
      <% if ((totalPages < parameter.parameterSites) || (isNaN(parameter.parameterSites))) { %>
        <script>
          location.href = '/practice/<%= parameter.parameterGametype %>/1';
        </script>
        <% }%>
      <% if (currentPage > 1) { %>
        <a href="/practice/<%= parameter.parameterGametype %>/1">â®ˆ</a>
        <a href="/practice/<%= parameter.parameterGametype %>/<%= currentPage - 1 %>">ðŸ¢¦</a>
      <% } %>
    
      <% if (currentPage > 2) { %>
        <a href="/practice/<%= parameter.parameterGametype %>/1">1</a>
        
      <% } %>
    
      <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
        <% if (i === currentPage) { %>
          <a class="selectedLink" href="/practice/<%= parameter.parameterGametype %>/<%= i %>"><%= i %></a>
        <% } else { %>
          <a href="/practice/<%= parameter.parameterGametype %>/<%= i %>"><%= i %></a>
        <% } %>
      <% } %>
    

    
      <% if (currentPage < totalPages) { %>
        <a href="/practice/<%= parameter.parameterGametype %>/<%= currentPage + 1 %>">âž©</a>
        <a href="/practice/<%= parameter.parameterGametype %>/<%= totalPages %>">âž²</a>
        
      <% } %>
    </div>
    

  



</div>
